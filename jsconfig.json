{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~components/*": ["./src/components/*"],
            "~constants/*": ["./src/constant/*"],
            "~pages/*": ["src/pages/*"],
            "~redux/*": ["./src/redux/*"],
            "~utils/*": ["./src/utils/*"],
            "~api/*": ["./src/api/*"],
            "~/*": ["./src/*"]
        },
        "module": "CommonJS",
        "target": "ES6",
        "moduleResolution": "classic",
        "jsx": "react"
    },
    "include": ["src/**/*.js", "src/**/*.jsx"],
    "exclude": ["node_modules", "dist"]
}